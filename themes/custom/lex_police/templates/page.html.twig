{% extends "@lex/pages/page.html.twig" %}

{% block hero_start %}
  {% if (node.field_lex_custom_banner_image.entity.fileuri) %}
    {% set hero = file_url(node.field_lex_custom_banner_image.entity.fileuri) %}
    {% set hero_alt = node.field_lex_custom_banner_image.alt %}
  {% else %}
    {% set hero = "/themes/custom/lex_police/img/PoliceBanner.png" %}
    {% set hero_alt = 'Image of a Lexington Police Officer in her car.' %}
  {% endif %}
  <div class="lex-hero" style="background-image: url({{ hero }})">
    <img src="{{ hero }}" alt="{{ hero_alt }}">
{% endblock %}
