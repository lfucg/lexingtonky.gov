<div class="usa-accordion">
  <ul class="usa-unstyled-list">
    <li>
      <button class="usa-button-unstyled" aria-expanded="false" aria-controls="collapsible-0">
        Suggestions or problems with this page?
      </button>
      <div id="collapsible-0" aria-hidden="true" class="usa-accordion-content js-accordion-content">

        <div class="usa-alert usa-alert-success js-success visually-hidden">
          <div class="usa-alert-body">
            <h3 class="lex-alert-heading usa-alert-heading">Message sent</h3>
            <p class="lex-alert-text usa-alert-text">Thank you for helping us to improve lexingtonky.gov!</p>
          </div>
        </div>

        <div class="usa-alert usa-alert-error js-error visually-hidden">
          <div class="usa-alert-body">
            <h3 class="lex-alert-heading usa-alert-heading">We were unable to send your message</h3>
            <p class="lex-alert-text usa-alert-text">Please email <a href="mailto:webmaster@lexingtonky.gov?subject=Problem sending lexingtonky.gov feedback">webmaster@lexingtonky.gov</a></p>
          </div>
        </div>

        {{ contact_form }}
      </div>
    </li>
  </ul>
</div>
