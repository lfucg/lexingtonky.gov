{% block page_notices %}
<div id="top-alert">
  {{ page.notices }}
</div>
{% endblock %}

{% block page_header %}
  {% include "@components/components/header.twig" with { menu: page.sitemast } %}
{% endblock %}

{% block page_hero %}
    {% set hero = is_front ? file_url(node.field_lex_custom_banner_image.entity.fileuri|image_style('hero_image')) : file_url(node.field_lex_custom_banner_image.entity.fileuri|image_style('hero_image')) %}
  {% include "@lex/includes/hero.html.twig" with {
    page: page,
    hero: hero,
    hero_alt: node.field_lex_custom_banner_image.alt,
    block: 'block_1',
  } %}
{% endblock %}

{% block page_breadcrumb %}
{{ page.breadcrumb }}
{% endblock %}

{% block page_main %}
<a id="main-content" name="main-content" tabindex="-1"></a>{# link is in html.html.twig #}
<main role="main">
  <div>
  {% block page_title_main %}
    {{ page.title }}
  {% endblock %}
  {% block content %}
    {{ page.content }}
  {% endblock %}
  {% block after_content %}
    {{ page.after_content }}
  {% endblock %}
  </div>
  {% block sidebar %}
  {% if page.sidebar is not empty %}
  <div>
    {{ page.sidebar }}
  </div>
  {% endif %}
  {% endblock %}
</main>
{% endblock %}

{% block page_feedback %}
  {{ page.feedback }}
{% endblock %}

<footer class="slab--dark-blue">
{% block page_footer %}
  {{ page.footer }}
{% endblock %}
<div class="slab--lex-blue footer-bottom">
  {% include "@lex/includes/lexington-copyright.html.twig"
    with {
      section_class: 'd-flex d-md-none',
      wordmark_class: 'mt-1',
    }
  %}
  </div>
</footer>
