 * which admin displayed theme.
 */
#}
{% block page_notices %}
<div id="top-alert">
  {{ page.notices }}
</div>
{% endblock %}
{% block page_header %}
<header role="banner">
  <a id="logo" href="/" accesskey="1" title="Home" aria-label="Home">City of Lexington, Kentucky, The Horse Capital of the World&reg;</a>
  {% block page_header_nav %}
    {{ page.sitemast }}
  {% endblock %}
</header>
{% endblock %}

{% block page_hero %}
  {% block hero_start %}
  {% if (node.field_lex_custom_banner_image.entity.fileuri) %}
    {% set hero = file_url(node.field_lex_custom_banner_image.entity.fileuri) %}
    {% set hero_alt = node.field_lex_custom_banner_image.alt %}
  {% else %}
    {% set hero = "/themes/custom/lex/img/lexington-hero-interior.jpg" %}
    {% set hero_alt = 'Image of Thoroughbred Park with race horse statues charging towards the viewer.' %}
  {% endif %}
  <div class="lex-hero" style="background-image: url({{ hero }})">
    <img src="{{ hero }}" alt="{{ hero_alt }}">
  {% endblock %}
    <div>
      {% block page_hero_body %}
        {{ page.hero }}
      {% endblock %}
    </div>
  </div>
{% endblock %}
{% block page_breadcrumb %}
{{ page.breadcrumb }}
{% endblock %}

{% block page_main %}
<a id="main-content" name="main-content" tabindex="-1"></a>{# link is in html.html.twig #}
<main role="main" class="search-page-main-body">
  <div>
  {% block page_title_main %}
    {{ page.title }}
  {% endblock %}
  {% block content %}
    {{ page.content }}
  {% endblock %}
  {% block after_content %}
    {{ page.after_content }}
  {% endblock %}
  </div>
  {% block sidebar %}
  {% if page.sidebar is not empty %}
  <div>
    {{ page.sidebar }}
  </div>
  {% endif %}
  {% endblock %}
</main>
{% endblock %}

{% block page_feedback %}
  {{ page.feedback }}
{% endblock %}

<footer>
{% block page_footer %}
  {{ page.footer }}
{% endblock %}
</footer>
