{% block hero_start %}
    {% if hero %}
    <div class="lex-hero">
      <img class="w-100" src="{{ hero }}" alt="{{ hero_alt }}">
    {% else %}
      {{ drupal_view('headers', '{{ block }}') }}
    {% endif %}
  {% endblock %}
  {% block page_hero_body %}
    {% if is_front %}
      <div class="welcome-block">
        <h1>Welcome to the Horse Capital of the World<sup>&reg;</sup>
        </h1>
        <p>The best place to find city services and information for Lexington, KY</p>
        {{ page.hero }}
      </div>
    {% else %}
      {{ page.hero }}
    {% endif %}
  {% endblock %}
</div>
