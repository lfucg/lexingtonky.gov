<a href="{{ url }}">
    <div class="news-card rounded">
        <div class="row">
            {% include '@components/atoms/news-card-img.twig' with {img: img, date: date} %}
            <div class="col-12">
                <div class="heading-container">
                    {% include '@components/atoms/card-heading.twig' with {heading: heading} %}
                </div>
                <div class="description-container">
                    {% include '@components/atoms/description.twig' with {description: description} %}
                </div>
            </div>
            <div class="news-footer">
                {% include '@components/atoms/card-footer.twig' with {text: text} %}
            </div>
        </div>
    </div>
</a>


