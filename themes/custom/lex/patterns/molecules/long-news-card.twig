<a href="{{ url }}">
    <div class="news-extended news-card rounded">
        <div class="row">
            <div class="col-12 col-md-4 extended-img-col">
                {% include '@components/atoms/news-card-img.twig' with {img: img, date: date} %}
            </div>
            <div class="col-12 col-md-8 extended-content-col">
                <div class="row">
                    <div class="col-12 extended-content">
                        <div class="heading-container">
                            {% include '@components/atoms/news-heading.twig' with {heading: heading} %}
                        </div>
                        <div class="description-container">
                            {% include '@components/atoms/description.twig' with {description: description} %}
                        </div>
                        <div class="news-footer">
                            {% include '@components/atoms/card-footer.twig' with {text: text} %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</a>


