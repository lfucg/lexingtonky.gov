{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished'
  ]
%}

<div{{ attributes.addClass(classes, 'pb-5') }}>
    {% include '@components/molecules/econ-card-button.twig' with {heading: content.field_heading, img: content.field_image[0]['#markup'], description: content.field_description, url: content.field_link[0]['#title']} %}
</div>