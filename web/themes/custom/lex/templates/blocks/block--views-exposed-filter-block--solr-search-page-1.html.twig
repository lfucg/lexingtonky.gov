<form action="/search" method="get" id="search-block-form" accept-charset="UTF-8" class="usa-search lex-search">
    <div class="input-group mb-3 js-form-item form-item js-form-type-search form-item-keys js-form-item-keys form-no-label">
        <label for="edit-keys" class="visually-hidden">Search</label>
        <input title="Enter the terms you wish to search for." data-drupal-selector="edit-keys" type="search" id="edit-keys" name="search_api_fulltext" value="" size="15" maxlength="128" class="form-search" placeholder="Search for..." />
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="submit">
                <span class="visually-hidden">Search</span>
                <i class="fa fa-search lex-icon"></i>
            </button>
        </div>
    </div>
</form>
